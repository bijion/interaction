@{
    ViewBag.Title = "投票查询";
}

<h2>@ViewBag.Title</h2>

<div>
    <form class="form-horizontal" role="form" action="Search" method="get">
        <div class="form-group">
            <label for="query" class="col-sm-2 control-label">ID : </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="tid" name="tid"
                        placeholder="请输入待查询话题的ID">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>

@if (ViewBag.HasResult)
{
    Html.RenderPartial("_ShowVoteEntity");
}
else
{
    <div>
        <p class="bg-warning">没有找到任何投票！</p>
    </div>
}

<div>
    <p>           
        <a class="btn btn-default" href="/Vote/List">投票列表</a>
        @if (Request.IsAuthenticated)
        {             
            <a class="btn btn-default" href="/Vote/Create">创建投票</a>
            <a class="btn btn-warning" href="/Vote/Monitor?tid=@ViewBag.TopicId">数据统计</a>
        }
    </p>
</div>
