<!-- Begin : Share modal -->
<div class="modal fade" style="overflow-y:visible;" id="shareModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius:0;padding:10px;">
            <div class="modal-body" style="padding:0;">
                <table style="width:100%;"><tr>
                    <td style="padding:0;margin:0;">
                        <div>我和<span id="sharevotepercentage" style="color:red;"></span>网友都认为"<span id="shareoptiontext" style="font-weight:bold;"></span>"，元芳，你怎么看？</div>
                        <div style="color:gray;">-- @ViewBag.VoteTopic.TopicEntity.TopicTitle</div>
                    </td>
                    <td style="padding:0;margin:0;vertical-align:top;"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button></td>
                </tr></table>
            </div>
            <div class="modal-footer" style="padding:5px 0 0 0;margin:0px;height:30px;border:none;text-align:left;">
                <p id="shareGuideTxt" style="display:inline-block;">分享：</p>
                <img id="wechatIcon" src="~/images/vote/share/MobileWechatShare.png" class="img-circle" style="width:24px; height:24px;cursor:pointer;" onclick="shareToSNS('wechat')" alt="分享给微信好友">
                <img src="~/images/vote/share/MobileSinaWeiboShare.png" class="img-circle" style="width:24px; height:24px;cursor:pointer;" onclick="shareToSNS('sinaweibo')" data-dismiss="modal" alt="分享到新浪微博">
                <img src="~/images/vote/share/MobileQQZoneShare.png" class="img-circle" style="width:24px; height:24px;cursor:pointer;" onclick="shareToSNS('qqzone')" data-dismiss="modal" alt="分享到QQ空间">
                @*<img src="~/images/vote/share/MobileDouBanShare.jpg" class="img-thumbnail" style="width:48px; height:48px;cursor:pointer;" onclick="shareToSNS('douban')" data-dismiss="modal" alt="分享到豆瓣">
                <img src="~/images/vote/share/MobileRenRenShare.png" class="img-thumbnail" style="width:48px; height:48px;cursor:pointer;" onclick="shareToRenren('renren')" data-dismiss="modal" alt="分享到人人">
                *@
            </div>
        </div>
    </div>
</div>
<div id="wechatQRCodeDiv" style="display:none;position:fixed;width:130px;height:100px;background-color:white;border:1px solid #DDDDDD;overflow:auto;padding:5px 10px;z-index:1050;">
    <div style="text-align: center; color: #666666; font-weight: bold;width:20px;height:75px;letter-spacing:2px;margin:0;padding:0;float:left;font-size:12px;">微信扫一扫</div>
    <div style="text-align: center; float:left;">
        <img id="wechatQRCodeImg" style="vertical-align: middle;float:left;" />
    </div>
</div>
<div id="downloadAppDiv" style="display: none; position: absolute; left: 0; top: 0; width: 300px; height:auto; background-color: #f6f6f6; border-color: #e7e7e7; border-width: 1px; border-style: solid;z-index:1050;">
    <div>
        <button type="button" class="close" onclick="hideDownloadAppDiv()" aria-hidden="true">
            &times;
        </button>
        <p style="text-align: center; color: #666666; font-family: 'Microsoft YaHei'; font-weight: bold; font-size: larger; line-height: 28px;">推荐安装“手机必应”（微软出品)</p>
        <p style="text-align: center; color: #999999; font-family: 'Microsoft YaHei'; font-weight: lighter; line-height: 20px;">仅一次安装，即刻进行微信分享</p>
    </div>
    <div style="text-align: center;">
        <a class="btn btn-primary" href="http://download.get.live.cn/bing/Android/BingNG_zh-CN_MSSITES.APK" style="margin-bottom: 5px;" target="_blank">下载必应APP</a>
    </div>
</div>
<!-- End : Share modal -->
 